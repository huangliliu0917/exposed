<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@mipmap/login_bg"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/id_login_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="68dp"
            >
            <!--<ImageView-->
            <!--android:layout_width="65dp"-->
            <!--android:layout_height="65dp"-->
            <!--android:src="@mipmap/login_logo"-->
            <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xposed_desc"
                android:visibility="gone"
                android:textSize="18sp"
                android:textColor="@color/color_333"
                android:layout_marginTop="12dp"
                />
        </LinearLayout>
        <!--登录名 密码表单-->
        <RelativeLayout
            android:id="@+id/id_login_form"
            android:layout_below="@id/id_login_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <RelativeLayout
                android:id="@+id/id_login_username"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <ImageView
                    android:id="@+id/id_login_layout_change_account"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_arrow"
                    android:layout_centerVertical="true"
                    />
                <LinearLayout
                    android:layout_toLeftOf="@id/id_login_layout_change_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_8dp"
                    >
                    <ImageView
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/login_user"
                        android:layout_marginLeft="@dimen/size_6dp"
                        />
                    <EditText
                        android:id="@+id/id_login_layout_loginname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textCursorDrawable="@drawable/edittext_cursor"
                        android:hint="请输入用户名"
                        android:textColorHint="#cccccc"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/size_8dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />
                </LinearLayout>


            </RelativeLayout>
            <View
                android:id="@+id/id_login_username_bottom"
                android:layout_below="@id/id_login_username"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                />
            <RelativeLayout
                android:layout_below="@id/id_login_username_bottom"
                android:id="@+id/id_login_password"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/login_password"
                        android:layout_marginLeft="@dimen/size_6dp"
                        />
                    <EditText
                        android:id="@+id/id_login_layout_password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入密码"
                        android:textColorHint="#cccccc"
                        android:textCursorDrawable="@drawable/edittext_cursor"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/size_8dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/id_login_password_bottom"
                android:layout_below="@id/id_login_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                />
            <RelativeLayout
                android:layout_below="@id/id_login_password_bottom"
                android:id="@+id/id_login_deviceId_bottom"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/login_password"
                        android:layout_marginLeft="@dimen/size_6dp"
                        />
                    <EditText
                        android:id="@+id/id_login_device_id_password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入设备Id"
                        android:textColorHint="#cccccc"
                        android:textCursorDrawable="@drawable/edittext_cursor"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/size_8dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_below="@id/id_login_deviceId_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                />


        </RelativeLayout>

        <!--记住密码-->
        <RelativeLayout
            android:id="@+id/id_login_saveAccount"
            android:layout_below="@id/id_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/size_16dp"
                >
                <!--<com.fd.kanyan.util.swtich.SwitchButton-->
                <!--android:id="@+id/sb_ios"-->
                <!--style="@style/SwitchButtonStyle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="记住密码"-->
                <!--android:textSize="@dimen/text_size_14sp"-->
                <!--android:textColor="@color/color_666"-->
                <!--/>-->
            </LinearLayout>
        </RelativeLayout>
        <!--登录按钮-->
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/id_login_saveAccount"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/btn_shape_login"
            android:text="登录"
            android:textColor="@color/white"
            android:onClick="@{(v)->login.login()}"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>